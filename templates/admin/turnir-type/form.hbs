<form method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="nameInput">Name</label>
    <input type="text" class="form-control" id="nameInput" placeholder="Name" name="name" value="{{data.name}}">
  </div>
  <div class="form-group">
    <label for="nameInput">Name Eng</label>
    <input type="text" class="form-control" id="nameEnInput" placeholder="Name Eng" name="name_en" value="{{data.name_en}}">
  </div>
  {{#if data.id}}
  <div class="form-group">
    <img src="/img/flag/{{data.flag}}" width="100px" />
  </div>
  {{/if}}
  <div class="form-group">
    <label for="flagInput">Flag</label>
    <input type="file" class="form-control-file" id="flagInput" name="flag">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>